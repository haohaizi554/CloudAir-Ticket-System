page {
  background-color: #f0f2f5;
}

.status-bar {
  background-color: #0052d9;
  color: white;
  padding: 15px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2px 10px rgba(0, 82, 217, 0.3);
}

.status-left {
  display: flex;
  flex-direction: column;
}

.main-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 4px;
}

.sub-info {
  display: flex;
  align-items: center;
  font-size: 12px;
  opacity: 0.9;
}

.date-tag {
  background: rgba(255,255,255,0.2);
  padding: 2px 6px;
  border-radius: 4px;
  margin-right: 8px;
}

.keyword-tag {
  background: #ff9c00; 
  color: white;
  padding: 2px 6px;
  border-radius: 4px;
}

.status-icon {
  font-size: 24px;
  opacity: 0.5;
}

.list-container {
  padding: 15px;
}

.flight-card {
  background-color: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 15px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.card-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.time-col {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 70px;
}

.date-label {
  font-size: 12px;
  color: #0052d9;
  background-color: #e6f7ff;
  padding: 2px 6px;
  border-radius: 4px;
  margin-bottom: 4px;
  font-weight: bold;
}

.placeholder-space {
  height: 20px; 
  margin-bottom: 4px;
}

.time {
  font-size: 22px;
  font-weight: bold;
  color: #333;
  line-height: 1;
}

.airport {
  font-size: 13px;
  color: #666;
  margin-top: 5px;
}

.arrow-col {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 12px;
  flex: 1;
  padding: 0 10px;
}

.line-box {
  display: flex;
  align-items: center;
  width: 100%;
  margin: 4px 0;
}

.dot {
  width: 4px;
  height: 4px;
  background: #ddd;
  border-radius: 50%;
}

.line {
  flex: 1;
  height: 1px;
  background: #ddd;
  margin: 0 2px;
}

.plane-icon {
  font-size: 12px;
  color: #0052d9;
  transform: rotate(90deg); 
}

.card-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #f5f5f5;
  padding-top: 15px;
}

.price {
  color: #e34d59;
  font-weight: bold;
}

.symbol {
  font-size: 14px;
}

.amount {
  font-size: 24px;
}

.btn-book {
  background-color: #0052d9;
  color: white;
  font-size: 14px;
  padding: 8px 25px;
  border-radius: 20px;
  margin: 0;
  line-height: 1.5;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80px;
  color: #999;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 10px;
  opacity: 0.5;
}