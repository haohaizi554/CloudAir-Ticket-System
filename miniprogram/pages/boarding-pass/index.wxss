page {
  background-color: #0052d9;
  height: 100vh;
  overflow: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20px;
}

.bg-header {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.title {
  color: rgba(255, 255, 255, 0.9);
  font-size: 18px;
  font-weight: bold;
  letter-spacing: 1px;
}

.ticket-card {
  width: 88%;
  background-color: white;
  border-radius: 16px;
  padding: 30px 20px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25); 
}

.card-title {
  font-size: 16px;
  color: #999;
  font-weight: bold;
  letter-spacing: 2px;
  text-transform: uppercase;
}

.divider-line {
  width: 100%;
  height: 1px;
  background-color: #eee;
  margin: 20px 0;
  border-bottom: 1px dashed #ccc;
}

.flight-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 25px;
  padding: 0 10px;
  box-sizing: border-box;
}

.city-col {
  flex: 1;
  text-align: center;
}

.city {
  font-size: 30px;
  font-weight: 800; 
  color: #333;
}

.icon-col {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60px;
}

.plane-emoji {
  font-size: 24px;
  margin-bottom: -5px;
}

.flight-no {
  font-size: 12px;
  color: #999;
  font-weight: bold;
  background: #f0f0f0;
  padding: 2px 6px;
  border-radius: 4px;
  margin-top: 5px;
}

.info-box {
  width: 100%;
  background-color: #f7f9fc;
  border-radius: 12px;
  margin-bottom: 25px;
  overflow: hidden;
}

.row-top {
  display: flex;
  justify-content: space-between;
  padding: 20px 20px 15px 20px;
}

.col-item {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.col-item.left { align-items: center; }
.col-item.center { align-items: center; }
.col-item.right { align-items: center; }

.label {
  font-size: 10px;
  color: #999;
  letter-spacing: 0.5px;
  margin-bottom: 6px;
  font-weight: bold;
  text-transform: uppercase;
}

.value-text {
  font-size: 15px;
  color: #333;
  font-weight: bold;
  font-family: -apple-system, BlinkMacSystemFont, sans-serif;
}

.name-text {
  max-width: 80px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.seat-text {
  font-size: 26px;
  color: #0052d9;
  font-weight: 900;
  line-height: 1;
}

.inner-divider {
  width: 90%;
  height: 1px;
  border-top: 1px dashed #dcdcdc;
  margin: 0 auto;
}

.row-bottom {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15px 20px 20px 20px;
}

.big-time {
  font-size: 44px; 
  color: #333;
  font-weight: 800;
  font-family: 'Courier New', Courier, monospace; 
  letter-spacing: 2px;
  line-height: 1;
  margin-top: 5px;
}

.qr-area {
  margin-bottom: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tips {
  font-size: 13px;
  color: #333;
  font-weight: bold;
}

.tips-sub {
  font-size: 10px;
  color: #ccc;
  margin-top: 4px;
}

.loading-box {
  width: 200px;
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 8px;
}

.loading-box text {
  font-size: 12px;
  color: #999;
  margin-top: 10px;
}

.spinner {
  width: 30px;
  height: 30px;
  border: 3px solid #e0e0e0;
  border-top: 3px solid #0052d9; 
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}