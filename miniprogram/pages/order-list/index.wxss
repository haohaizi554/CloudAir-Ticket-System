/* pages/order-list/index.wxss */
page {
  background-color: #f0f2f5;
  padding: 15px;
  box-sizing: border-box;
}

.order-card {
  background-color: white;
  border-radius: 12px;
  margin-bottom: 15px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

/* 头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.order-id {
  font-size: 10px;
  color: #999;
}

.status-tag {
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 4px;
}

.status-tag.paid {
  background-color: #e6f7ff;
  color: #0052d9;
  border: 1px solid #91caff;
}

.status-tag.refunded {
  background-color: #f5f5f5;
  color: #999;
  border: 1px solid #ddd;
}

/* 中间内容 */
.card-body {
  margin-bottom: 15px;
}

.flight-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.arrow {
  font-size: 12px;
  color: #ccc;
}

.info-row {
  font-size: 12px;
  color: #666;
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
}

.seat-info {
  margin-top: 10px;
  background-color: #f9f9f9;
  padding: 8px;
  border-radius: 6px;
  text-align: center;
  font-size: 14px;
  color: #666;
}

.seat-no {
  color: #0052d9;
  font-weight: bold;
  font-size: 16px;
}

/* 底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px; /* 稍微加点顶距 */
}

.btn-group {
  display: flex;
  gap: 10px; /* 按钮之间的间距 */
}

.btn-code {
  margin: 0;
  background-color: #0052d9;
  color: white;
  font-weight: normal;
}

.price {
  font-size: 20px;
  font-weight: bold;
  color: #333;
}

.btn-refund {
  margin: 0;
  background-color: white;
  color: #666;
  border: 1px solid #ccc;
  font-weight: normal;
}

.user-info-small {
  display: flex;
  align-items: center;
}

.small-avatar {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  margin-right: 8px;
  background-color: #eee;
}

.passenger-name {
  font-size: 12px;
  color: #333;
  font-weight: bold;
}