/* pages/profile/index.wxss */
page {
  background-color: #f6f6f6;
}

.user-card {
  background-color: white;
  padding: 30px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

/* 头像按钮的特殊处理，去掉默认边框 */
.avatar-btn {
  padding: 0;
  width: 80px !important;
  height: 80px !important;
  background: none;
  border-radius: 50%;
  margin-bottom: 10px;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: #eee;
}

.edit-tip {
  font-size: 10px;
  color: #999;
  margin-bottom: 20px;
}

.nickname-wrapper {
  display: flex;
  align-items: center;
  background-color: #f9f9f9;
  padding: 10px 20px;
  border-radius: 20px;
  width: 60%;
}

.label {
  font-size: 14px;
  color: #666;
}

.nickname-input {
  flex: 1;
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

/* 菜单列表 */
.menu-list {
  background-color: white;
  margin-top: 10px;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  border-bottom: 1px solid #f5f5f5;
}

.menu-item:active {
  background-color: #fafafa;
}

.item-left {
  display: flex;
  align-items: center;
  font-size: 16px;
}

.icon {
  margin-right: 10px;
  font-size: 18px;
}

.arrow {
  color: #ccc;
}

.footer {
  text-align: center;
  margin-top: 30px;
  color: #ccc;
  font-size: 12px;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6); /* 黑色背景，0.6透明度 */
  z-index: 999; /* 保证在最上层 */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 2. 中间白色的弹窗盒子 */
.modal-box {
  width: 300px;
  background-color: white;
  border-radius: 16px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative; /* 为了定位关闭按钮 */
  animation: popUp 0.3s ease; /* 弹出动画 */
}

@keyframes popUp {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
}

.qr-image {
  width: 200px;
  height: 200px;
  margin-bottom: 10px;
}

.modal-tip {
  font-size: 12px;
  color: #999;
}

.close-btn {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 24px;
  color: #ccc;
  line-height: 1;
  padding: 5px;
}