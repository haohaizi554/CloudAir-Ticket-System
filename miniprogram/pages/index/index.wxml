<view class="container">

<view class="header">
  <text class="header-title">云端航空</text>
  <text class="header-sub">让飞行更简单</text>
</view>

<view class="search-card">
  
  <view class="location-row">
    <view class="input-box">
      <text class="label">出发地</text>
      <input class="city-input" value="{{fromCity}}" bindinput="onInputFrom" placeholder="北京" />
    </view>
    <view class="icon-plane">✈️</view>
    <view class="input-box">
      <text class="label">目的地</text>
      <input class="city-input" value="{{toCity}}" bindinput="onInputTo" placeholder="上海" />
    </view>
  </view>

  <view class="divider"></view>

  <view class="date-row">
    <picker class="date-picker-box" mode="date" start="2023-01-01" end="2099-12-31" bindchange="onDateChange">
      <view class="picker-content">
        <text class="date-label">出发日期：</text>
        <view class="date-value {{date ? '' : 'placeholder'}}">
          {{date || '日期不限'}}
        </view>
      </view>
    </picker>

    <view class="action-area">
      <view wx:if="{{date}}" class="clear-text-btn" catchtap="onClearDate">清除</view>
      <view wx:else class="arrow">></view>
    </view>
  </view>

  <view class="keyword-row">
    <text class="icon-search">🔍</text>
    <input 
      class="keyword-input" 
      value="{{keyword}}" 
      bindinput="onInputKeyword" 
      placeholder="航班号(CA123) / 航司(东航)" 
      placeholder-class="placeholder-style"
    />
  </view>

  <button class="btn-search" bindtap="onSearch">查询航班</button>
</view>

<view class="swiper-container">
  <view class="swiper-title">热门活动</view>
  <swiper 
    wx:if="{{banners.length > 0}}"
    class="banner-swiper" 
    indicator-dots="true" 
    autoplay="true" 
    interval="3000" 
    duration="500" 
    circular="true"
    indicator-active-color="#0052d9"
  >
    <block wx:for="{{banners}}" wx:key="id">
      <swiper-item>
        <image src="{{item.url}}" class="slide-image" mode="aspectFill"></image>
      </swiper-item>
    </block>
  </swiper>
</view>

</view>